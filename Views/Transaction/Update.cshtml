@model PatrahSave.Models.Transaction
<form method="post" asp-action="Update">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        


        <div class=" form-group row">
            <h1>
               Update
            </h1>
        </div>
        <div class=" row">
            <div class=" col-12">
                <div class=" form-group row">
                    <div>
                        <label asp-for="Id">

                        </label>
                    </div>
                    <div class=" col-4">
                        <label asp-for="transactionName"></label>
                    </div>
                    <div class=" col-4 row">
                        <label asp-for="Amount"></label>
                    </div>


                </div>

                <div class=" col-4">
                    <input asp-for="Id" class="form-control" />
                </div>
                <div class="col-4 ">
                    <input asp-for="transactionName" class="form-control" />

                </div>
                <div class=" col-4">
                    <input asp-for="Amount" class="form-control" />

                </div>

            </div>
            <div class=" form-group row">
                <div class=" col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="UPDATE" />
                    </div>
                    <div class="col">
                        <a asp-action="index"> class="btn btn-danger w-75" RETURN </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>