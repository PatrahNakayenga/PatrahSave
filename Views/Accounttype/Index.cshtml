@model IEnumerable<PatrahSave.Models.Accounttype>
<div class=" ="container" p-3">
    <div class="row pt-4">
      <div class = "col-6">
             <h1 class=" text primary"> List of Accounts </h1>

    </div>
        <div class ="col-6" text-right">
          <a asp-controller="Transaction " asp-action="Create" class="btn btn-primary"
             >Add new Account Details

          </a>
        </div>
</div>
    <br/>

    @if(Model.Count() > 0)
            { 
                <table class="table table-bordered table-striped" style="width :100%">
                    <thead>
                        <tr>
                            <th>
                                AccountId
                            </th>
                            <th> Account Name
                            </th>
                            <th>AccountType
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var Accounttype in Model)
                {
                        <tr>
                            <td width="30%">
                                @Accounttype.Id
                        </td>
                        <td width="30%">
                            @Accounttype.AccountName
                        </td>
                        <td width="30%">
                            @Accounttype.AccountType

                        </td>
                        <td width="40%">
                            <div class="col-6 text-right">
                                <a asp-controller="Transaction" asp-action="@Accounttype.Id" class="btn btn-mx-1">Update</a>
                                <a asp-controller="Transaction" asp-action="@Accounttype.Id" class="btn btn-mx-1">Delete</a>
                            </div>

                        </tr>
                }
                    </tbody>
                </table>
            }
            else
            {
                <p>
                    No Accounts yet
                </p>
            }
    </div>
